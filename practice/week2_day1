//convert array
const conArr=(arr) => {
  const upArr= arr.map(x => x.toUpperCase());
  const sortArr = upArr.sort();
  return sortArr;
}
console.log(conArr(["z", "hi", "hey", "apple"]))



const conArr1=(arr) => {
  let res = '';
let newArr =[];
 for (i = 0; i < arr.length; i++) {
  res = arr[i].toUpperCase();
  newArr.push(res);
}
return newArr.sort()
}
console.log(conArr1(["z", "hi", "hey", "apple"]))

//FizzBuzz
const fizzBuzz=() =>{
for (i = 1; i <= 100; i++) {
  if (i%3==0) {
    console.log("Fizz")
  } else if (i%5==0) {
    console.log("Buzz")
  } else if(i%5 ==0 && i%3 ==0) {
    console.log("Fizzbuzz")
  }
}
}
fizzBuzz()


//Object
const cat = {
  name:"Tom",
  age : 8,
  favoriteThings: ["tuna", "other cats", "ball of yarn"],
  speakFrenche: false,
  canSolveRubiks: false,
  enemies: {
    name: "Jerry",
    size: "small",
    age: 3
  },
  scream: () =>{
    console.log("Jerry I will kill you!")
  }
}

console.log(cat.scream())


//Make an object of your computer (year, model, color, etc.)
const myComputer = {
  "year" : 2020,
  "model" : "Acer",
  "color" : "Black",
  
};


//access the data about your computer's year
console.log(myComputer.year);


//You've painted your laptop!
myComputer.color = "white";


//add a new property called "broken" and set it equal to "true" using dot notation
myComputer.broken = true;


//add a new property using dot notation called "programs" that is a list of a few programs on your computer
myComputer.programs = ["hi", "I don't know", "hey"];
console.log(myComputer.programs);


//write an if statment to check if your laptop is broken - if it is broken log "fixing laptop" and change "broken" to "false"
if (myComputer.broken) {
  console.log("fixing laptop");
myComputer.broken = false;
}


//write an if statement to check your object for an "owner" property. If there is no owner, use dot notation to add one.
if (myComputer.hasOwnProperty("owner") == false) {
  myComputer.owner = "Fei"
}


//You've just installed "Sims 5" on your computer. We want to check if your "programs" list already has "Sims 5" (use a loop). If there is no "Sims 5" add it, else log "Sims 5 already in the list"
if (myComputer.programs.includes("Sims 5")) {
  console.log("Sims 5 already in the list")
} else {
  myComputer.programs.push("Sims 5")
  
}
console.log(myComputer.owner);


//another method to add "sims 5"
for (i = 0; i < myComputer.programs.length; i++) {
  if (myComputer.programs[i] == "Sims 5"){
    console.log("great");
    break;
    
  }  else {
     myComputer.programs.push("Sims 5")
    break;
}
}
